<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".LearnActivity" >

    <TextView
        android:id="@+id/learn_textview_intro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/learn_intro" />

    <TextView
        android:id="@+id/learn_textview_choose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/learn_textview_intro"
        android:layout_centerVertical="true"
        android:text="@string/learn_text_choose" />

    <ListView
        android:id="@+id/listView_existing_captures"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/learn_textview_choose"
        android:layout_below="@+id/learn_textview_choose" >
    </ListView>

    <ImageButton
        android:id="@+id/btn_learn_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/learn_textfield_signal_name"
        android:layout_below="@+id/learn_textfield_signal_name"
        android:contentDescription="@string/btn_learn_delete"
        android:src="@drawable/ic_learn_delete" />

    <ImageButton
        android:id="@+id/btn_learn_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/learn_textfield_signal_name"
        android:layout_centerHorizontal="true"
        android:contentDescription="@string/btn_learn_save"
        android:src="@drawable/ic_learn_save" />

    <EditText
        android:id="@+id/learn_textfield_signal_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/learn_textview_intro"
        android:layout_below="@+id/learn_textview_intro"
        android:ems="10"
        android:hint="@string/learn_hint_signal_name" />

    <ImageButton
        android:id="@+id/btn_learn_compose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/learn_textfield_signal_name"
        android:layout_below="@+id/learn_textfield_signal_name"
        android:contentDescription="@string/btn_learn_learn"
        android:src="@drawable/ic_learn_compose" />

</RelativeLayout>